<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="414dp"
        android:layout_height="730dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/imgPos0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                app:srcCompat="@drawable/invisivel"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/imgPos1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />

            <ImageButton
                android:id="@+id/imgPos2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_marginStart="10dp"
                android:id="@+id/imgPos3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />

            <ImageButton
                android:id="@+id/imgPos4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />

            <ImageButton
                android:id="@+id/imgPos5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_marginStart="10dp"
                android:id="@+id/imgPos6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />

            <ImageButton
                android:id="@+id/imgPos7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />

            <ImageButton
                android:id="@+id/imgPos8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/invisivel" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp">


            <ImageButton
                android:layout_marginStart="10dp"
                android:id="@+id/imgPlayer1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#5E5C5C"
                app:srcCompat="@drawable/jogador1"
                android:contentDescription="@string/jogador1" />

            <ImageButton
                android:id="@+id/imgPlayer2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#5E5C5C"
                app:srcCompat="@drawable/jogador2_btn_foreground"
                android:contentDescription="@string/jogador2" />


            <Button
                android:layout_marginLeft="4dp"
                android:id="@+id/btnClear"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#5E5C5C"
                android:text="@string/clear"
                android:textColor="#FFFFFF"
                android:textSize="48sp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>